                <input type="text" id="apellido_visitante" class="form-control" onchange="" required>
                <div id="FB_apellido"></div>
              </div>

              <div class="form-group mb-3">
                <label>Genero</label>
                <select name="" id="genero_visitante" class="form-control">
                  <option value="">Seleccione un genero</option>
                  <option value="M">Masculino</option>
                  <option value="F">Femenio</option>
                  <option value="otro">Otro</option>
